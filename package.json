{
  "name": "worldcoin-pooltogether-miniapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:check": "npm run type-check && npm run lint && npm run test && npm run build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "npm run type-check && npm run lint && npm run test",
    "build:validate": "node scripts/build-validation.js",
    "pre-commit": "npm run validate",
    "compile": "forge build",
    "test:contracts": "forge test",
    "test:contracts:coverage": "forge coverage",
    "test:contracts:gas": "forge snapshot",
    "deploy:local": "forge script script/Deploy.s.sol --rpc-url http://localhost:8545 --broadcast",
    "deploy:testnet": "forge script script/DeployTestnet.s.sol --rpc-url ${TESTNET_RPC_URL:-http://localhost:8545} --broadcast --ffi",
    "deploy:sepolia": "forge script script/Deploy.s.sol --rpc-url $WORLDCHAIN_SEPOLIA_RPC_URL --broadcast --verify",
    "deploy:mainnet": "forge script script/Deploy.s.sol --rpc-url $WORLDCHAIN_RPC_URL --broadcast --verify",
    "draw:tick": "tsx scripts/draw-tick.ts",
    "draw:automation": "./scripts/draw-automation.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm install && forge install",
    "build:pages": "npx @cloudflare/next-on-pages@latest",
    "preview:pages": "wrangler pages dev .vercel/output/static --compatibility-date=2024-12-01"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sentry/nextjs": "^10.5.0",
    "@tanstack/react-query": "^5.85.3",
    "@worldcoin/idkit": "^2.4.1",
    "@worldcoin/minikit-js": "^1.9.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.6.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "viem": "^2.33.3",
    "wagmi": "^2.16.3"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.5",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5",
    "wrangler": "^3.95.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run lint:fix",
      "npm run type-check"
    ],
    "*.{ts,tsx}": [
      "npm run test -- --findRelatedTests --passWithNoTests"
    ]
  }
}
